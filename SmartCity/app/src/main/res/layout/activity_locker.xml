<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#1c7887">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/bk"
        android:padding="5dp"


        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Apply Parking Lot"
            android:id="@+id/textapplyvip"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffbf00"
            android:textSize="30dp"
            android:textIsSelectable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26bcd5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:text="Phone Number:"
                android:id="@+id/textapplyvipww"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#274862" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26bcd5">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Peroid:     "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="From"
                android:id="@+id/tp"
                android:background="#0952f1"
                android:textColor="#ffffff"
                android:onClick="timePicker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=" Time   "
                android:id="@+id/fromtime"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="To"
                android:id="@+id/tp2"
                android:background="#0952f1"
                android:textColor="#ffffff"
                android:onClick="timePicker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="   Time"
                android:id="@+id/totime"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#274862" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26bcd5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parking Lot:    "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick"
                android:id="@+id/picklot"
                android:background="#6984de"
                android:textColor="#ffffff"
                android:onClick="setParkingLotPicker"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="    Lot: 01"
                android:id="@+id/carnum"
                android:textColor="#ffffff" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#26bcd5">

            <Button
                android:id="@+id/btnverification"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ver. Code "
                android:background="#d6c84b"
                android:breakStrategy="high_quality"
                android:clickable="true"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/vercode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#af2f2f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Verifiycation Code"
            android:id="@+id/verificodetext"
            android:layout_gravity="center_horizontal"
            android:textColor="#323232" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Apply"
            android:background="#a7dce0"
            android:clickable="true"
            android:singleLine="false"
            android:textColor="#1c7887"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
